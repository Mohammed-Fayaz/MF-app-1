{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "shared": ["./src/shared"],
            "@mf-types": ["./@mf-types/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": false
    },
    "include": ["src"]
}